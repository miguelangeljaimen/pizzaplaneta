<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="connection.datasource">java:jboss/datasources/pizzaplaneta</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <mapping class="cl.pizzaplaneta.modelos.Cliente"/>
        <mapping class="cl.pizzaplaneta.modelos.Local"/>
        <mapping class="cl.pizzaplaneta.modelos.Producto"/>
        <mapping class="cl.pizzaplaneta.modelos.Vendedor"/>
        <mapping class="cl.pizzaplaneta.modelos.Venta"/>

    </session-factory>  
</hibernate-configuration>